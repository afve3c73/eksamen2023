    max-width: 400px;
    padding-bottom: 30px;
}

.bild {
    border-radius: 50%;
}

article {
    display: flex;
    flex-direction: column;
    gap:10px;
    align-items: center;
    
    
}

p {
    max-width: 65ch;
}
form {
  padding: 2rem;
  background: var(--primary);
  border-radius: 8px;
  display: grid;
  font-family: ;
  font-size: 20px;

}

label,
