---
const { link, variant = "primary", size = "medium" } = Astro.props;
import "../style/global.css";
import "../style/alians.css";
import "../style/base.css";
---

<a href={link} data-variant={variant} data-size={size}>
  <slot />
</a>

<style>

  [data-variant="primary"] {
    background-color: var(--primary);
    text-decoration: none;
    color: var(--white);
   border-radius: 50px;
    text-align: center;
    font-size: 20;
  }
  [data-variant="primary"]:hover {
    scale:1;
    
    
    transition-duration: 200ms;
  }

  [data-variant="secondary"] {
    font-size: 20;
    color: var(--black);
    border-radius: 50px;
    border-color: var(--primary);
    text-decoration: none;
    border-width: 2px;
   
    text-align: center;
  }
  [data-variant="secondary"]:hover {
    scale: var(--ctaHover);
    box-shadow: var(--button-shadow);
    text-align: center;
    transition-duration: 200ms;
  }

  
  [data-size="small/base"] {
    padding-inline: 25px;
    padding-block: 8px;
    font-size: 18px;
    padding-inline: 25px;
    display: inline-block;

    @media (max-width: 600px) {
      font-size: 13px;
      padding-block: 6px;
      padding-inline: 0;
      width: 100%;
    }
  }
  [data-size="base"] {
    padding-inline: 25px;
    padding-block: 8px;
    font-size: 18px;
    padding-inline: 25px;

    display: inline-block;
  }
  @media (max-width: 600px) {
    [data-size="base"] {
      font-size: 16px;
      padding-block: 6px;
      padding-inline: 5px;
      width: 100%;
    }
  }
  [data-size="big"] {
    font-size: 18px;
    padding-block: 8px;
    padding-inline: 40px;
    display: inline-block;
    /* display: flex;
    justify-content: center; */
  }

  @media (max-width: 600px) {
    [data-size="big"] {
      padding-block: 6px;
      width: 100%;
      font-size: 15px;
      padding-inline: 10;
    }
  }
</style>
