---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
const { title } = Astro.props;
import "../style/global.css";
import "../style/alians.css";
import "../style/base.css";
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width" />

    <!-- Visningsområdet og skaleringsniveauet for mobilvisning -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Tellerup er et af de førende danske forlag med fokus på børne- og ungdomsbøger. " />
    <meta name="keywords" content="Tellerup, bøger, bogforlag" /><meta name="author" content="Tellerup" />

	<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300,0,400;0,600;1,400&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    <title>{title}</title></head>

  <!-- <meta name="robots" content="noindex, nofollow" /> -->

  <body>
    <Header/>
    <main class="">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    max-width: 1200px;
    margin: auto;
    padding-inline: 10px;
    
  }
</style>
